<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/tracklist_item_courier"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/singpost" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/tracklist_item_padding">

            <TextView
                android:id="@+id/tracklist_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="4dp"
                android:text="Oukitel K5 Ru"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tracklist_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="RF531026531SG" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent">


            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/tracklist_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="Delivery status"
                    android:src="@drawable/status_delivered" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintRight_toRightOf="parent">

                <CheckBox
                    android:id="@+id/tracklist_item_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/round_chekbox"
                    android:padding="19dp"
                    android:scaleX="0.65"
                    android:scaleY="0.65" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>