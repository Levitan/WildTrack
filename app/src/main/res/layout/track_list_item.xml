<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/tracklist_item_padding">

        <TextView
            android:id="@+id/tracklist_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Oukitel K5 Ru"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tracklist_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RF531026531SG" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent">


        <RelativeLayout
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/tracklist_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/status_delivered"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Delivery status" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent">

            <CheckBox
                android:id="@+id/tracklist_item_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@drawable/round_chekbox"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:padding="19dp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>